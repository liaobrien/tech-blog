

<div class="card m-5">
      <div class="card-header">
                  <h3 class="text-dark">{{post.title}}</h3>
            <h5 class="text-dark">Posted by {{user.username}} on {{formatDate post.post_date}}</h5>
      </div>
      <div class="text">
            <p>
                  {{post.content}}
            </p>
      </div>
</div>

<div class="card m-5">
      <div class="card-header">
            <h4 class="text-dark">Comments</h4>
      </div>
      <div class="text">
            <ul class="list-group list-group-flush">
                  {{#each comments as |comment|}}
                  <li class="list-group-item">
                        {{comment.comment_text}}
                        <br /><br />
                        - {{user.username}}, {{formatDate comment.comment_date}}
                  </li>
                  {{/each}}
            </ul>
      </div>
</div>



